<h2 style="margin-top:50px;">Search</h2>

<div ng-app="SearchApp" ng-controller="SearchController">

    <div class="SearchInput" style="width:100%; height:35px;">
        <input style="background-color: rgba(255, 255, 255, 0.1); border:0px; border-radius:2px; width:30%; outline:0; max-width:100%; padding-left:10px; font-size:20px; height:100%;"
               type="text" ng-model="query" placeholder="Drink name" ng-click="getInfoAboutDrink('')" />
    </div>

    <div class="ingredientList" style="height:100%; max-height:207px; width:30%; overflow-y:auto; margin:10px auto 20px auto;">
        <div ng-repeat="drink in list | filter: search" ng-hide="query ==''">
            <div ng-click="getInfoAboutDrink(drink); selected($index)" ng-class="$index===selectedIndex ? 'active' : 'DrinkList'">
                <div>{{drink.Name }}</div>
                        </div>
            </div>
        </div>

    <div style="height: 20%; position:relative; bottom: 0px;" class="DrinkInfo" ng-show="DrinkInfo != ''">
        <table style="width:100%; table-layout:fixed; margin-top:10px;">
            <thead>
                <tr>
                    <td colspan="3">
                        <h1>{{DrinkInfo.Name}}</h1>
                    </td>
                </tr>

            </thead>
            <tbody>
                <tr>
                    <td><h4>Amount</h4></td>
                    <td><h4>Ingredients</h4></td>
                    <td><h4>Order</h4></td>
                </tr>
                <tr ng-repeat="x in DrinkInfo.DRI | orderBy:'Order'">
                    <td>{{x.Amount}}</td>
                    <td>{{x.Name}}</td>
                    <td>{{x.Order}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div style="position: fixed; bottom: 0; right: 10px;">
    <section class="color-7">
        <nav class="cl-effect-4">
            @Html.ActionLink("About this project", "About", "Home")
        </nav>
    </section>
</div>



